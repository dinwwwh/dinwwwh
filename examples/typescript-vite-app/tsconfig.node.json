{
  "extends": "@dinwwwh/tsconfig/base.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@TODO/*": ["./src/*"]
    },
    "types": ["vite/client", "@types/node"]
  },
  "include": [
    "src/**/*.test.*",
    "src/**/*.spec.*",
    "src/**/__tests__",
    "src/**/__mocks__",
    "src/**/__snapshots__",

    "playground",
    "scripts",
    "tests",

    "vite.config.ts",
    "vitest.config.ts"
  ]
}
